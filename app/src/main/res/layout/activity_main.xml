<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4a2278">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/discoverability_button"
        android:id="@+id/EnableDiscoverability"
        android:layout_gravity="center_horizontal"
        android:background="#494848"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginTop="10dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/bluetoothstate"
        android:textSize="30sp"
        android:textColor="#fbfbfb"
        android:gravity="center_horizontal"
        android:layout_weight=".22"
        android:layout_margin="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scan_button"
            android:id="@+id/scandevice"
            android:background="#494848"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_marginRight="200dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan Wifi"
            android:id="@+id/scanwifi"
            android:layout_marginStart="100dp"
            android:textColor="#ffffff"
            android:background="#494848"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ListView
            android:layout_width="1000dp"
            android:layout_height="600dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:id="@+id/devicesfound"
            android:background="#a7a2a2"
            android:clickable="true"
            android:divider="#000000"
            android:dividerHeight="1dp"/>

        <ListView
            android:layout_width="1000dp"
            android:layout_height="600dp"
            android:id="@+id/ListWifi"
            android:background="#a7a2a2"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:divider="#010101"
            android:dividerHeight="1dp"/>
    </LinearLayout>

</LinearLayout>